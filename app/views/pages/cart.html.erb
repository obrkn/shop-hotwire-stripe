<main class="container mx-auto mt-12 mb-28 px-5">
    <h1 class="text-3xl font-bold text-center">CART</h1>
    <div
        id="cart"
        class="grid grid-cols-1 md:grid-cols-3 gap-4 gap-y-12 mt-12"
    >
        <% @cart.each do |id, quantity| %>
        <% raise @cart.inspect%>
            <% product = @products.find_by(id: id.to_s) %>
            <%= product.title %>
        <% end %>
    </div>
</main>
<%= render "fixed_cart" %>